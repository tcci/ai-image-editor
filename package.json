{
  "name": "ai-image-editor",
  "version": "0.0.1",
  "description": "AI Image Editor",
  "main": "static/main.ts",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "format": "prettier --write '**/*.ts'",
    "lint": "tsc && eslint --max-warnings=0 static && prettier --check '**/*.ts'",
    "build": "esbuild static/main.ts --bundle --outfile=static/main.js"
  },
  "author": "Samuel Colvin",
  "license": "MIT",
  "prettier": {
    "singleQuote": true,
    "semi": false,
    "trailingComma": "all",
    "tabWidth": 2,
    "printWidth": 80
  },
  "eslintConfig": {
    "root": true,
    "ignorePatterns": ["*.js"],
    "extends": [
      "typescript",
      "prettier"
    ],
    "rules": {
      "@typescript-eslint/no-explicit-any": "off"
    }
  },
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^6.7.5",
    "@typescript-eslint/parser": "^6.7.5",
    "esbuild": "^0.19.4",
    "eslint": "^8.51.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-config-typescript": "^3.0.0",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2"
  }
}
